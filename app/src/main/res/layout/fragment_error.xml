<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans"
        android:gravity="center"
        android:text="Ooops!"
        android:padding="10dp"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ltError" />

    <ImageView
        android:id="@+id/ltError"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cat_404"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:text="Não foi possível carregar as imagens. Tente novamente mais tarde."
        android:textColor="@color/dark_blue"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ltError" />

    <!-- Botão de Retry -->
    <Button
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentar novamente"
        android:minWidth="200dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red_300"
        app:elevation="30dp"
        android:textAllCaps="false"
        android:fontFamily="@font/plus_jakarta_sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>