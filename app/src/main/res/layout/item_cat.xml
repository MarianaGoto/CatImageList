<!-- xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="6dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/siv_Cat"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornersImageView" />

    <ImageView
        android:id="@+id/ivCircleShape"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/sp_circle"
        app:layout_constraintEnd_toEndOf="@id/siv_Cat"
        app:layout_constraintTop_toTopOf="@id/siv_Cat" />

    <ImageView
        android:id="@+id/ivFavoriteIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:padding="6dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_favorite"
        android:tint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/siv_Cat"
        app:layout_constraintTop_toTopOf="@id/siv_Cat" />


    <TextView
        android:id="@+id/tvTitleImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:text="Luna"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siv_Cat" />

    <TextView
        android:id="@+id/tvSubtitleImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans"
        android:text="Angora"
        android:textColor="@color/medium_gray"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleImg" />


</androidx.constraintlayout.widget.ConstraintLayout>
