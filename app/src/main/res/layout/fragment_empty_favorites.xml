<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ltEmptyFavorites"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="true"
        app:lottie_rawRes="@raw/cat_favorite"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tvTitleImg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans"
        android:gravity="center"
        android:text="@string/titulo_sem_favoritos"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ltEmptyFavorites" />
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans"
        android:gravity="center"
        android:text="@string/subtitulo_sem_favoritos"
        android:textColor="@color/dark_blue"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleImg" />
</androidx.constraintlayout.widget.ConstraintLayout>